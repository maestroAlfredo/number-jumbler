@using NumberJumbler.ViewModels
@model NumberJumblerHomeViewModel

<div class="jumbotron">
    <h1>Welcome To Number Jumbler</h1>
    <p class="lead">Upload a csv file and see the magic! Number Jumbler finds the highest occuring number in an increasing sorted list of numbers provided it occurs more than half of the size of the  input list</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">View Source on GIT &raquo;</a></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Choose file to Upload
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                            <div class="form-group panel-body" style="margin-bottom:0px">
                                <div class="input-group" role="group">
                                    <span class="input-group-btn">
                                        @*<input id="uploadInput" type="file" style="display:none" />*@
                                        <label class="btn btn-default">Upload @Html.DisplayFor(x => x.File)</label>
                                    </span>                                  
                                    <input type="text" placeholder="Choose File" id="n2" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group panel-body" style="margin-bottom:0px">                               
                                @Html.CheckBoxFor(m => m.CheckError, new { @class = "checkbox-inline", name = "checkError" })
                                <text>Check file for errors</text>
                            </div>
                            <div class="form-group panel-body" style="margin-bottom:0px">
                                <div class="btn-group" role="group">
                                    <button type="submit" class="btn btn-primary">Jumble</button>
                                    <button type="reset" class="btn btn-default">Clear</button>
                                </div>
                            </div>
                    }
                </div>
            </div>   
        </div>
        <div class="col-sm-6">
            <div class="panel panel-info">
                <div class="panel-heading">NumberJumbler Result</div>
                <div class="panel-body">
                   <h2>@Html.DisplayTextFor(m=>m.Result.Result)</h2>
                </div>
            </div>  
        </div>      
    </div>



